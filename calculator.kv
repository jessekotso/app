<Button>
	background_color: (1, 1, 1, 1)
	background_normal: "button.png"
	size: 100, 100
	size_hint: 1, 0.5
	border: (10, 10, 10, 10)
	
	
	
	
	
	


<CalculatorWidget>
	BoxLayout

		input_box: input_box

		orientation: "vertical"
		size: root.width, root.height
		

		
		
		

		TextInput:
			id: input_box
			text: " "
			font_size: 65
			multiline: False
			halign: "right"
			size_hint: (1, 0.25)
			background_color: (1, 1, 1, 0)
			foreground_color: (1, 1, 1, 1)

			
			

		GridLayout:
			cols: 4
			rows: 5
			size_hint_y: 0.8
			width: 100	
			size: 100 , 100
			size_hint: 1, 0.5
			#padding: 10
			#spacing: 10
			#height: 400
			

			
			

			#### row 1 ####
			Button:
				text: "AC"
				font_size: 40
				on_press: root.clear()
				on_release: 
				
				
				
				
			
			Button:
				text: "+/-"
				font_size:40
				on_press: root.pos_neg()
				
			#Button:
				#text: u"\u00AB"
				#font_size:40
				#on_press: root.remove_last()		
				

			Button:
				text: "%"
				font_size:40
				on_press: root.signs("%")
				
				

			Button:
				text: "/"
				font_size: 40
				on_press: root.signs("/")
				background_normal: "grey.png"
				
			#### row 2 ####
			Button:
				text: "7"
				font_size: 40
				background_normal: "dark.png"
				on_press: root.button_value(7) 
				

			Button:
				text: "8"
				font_size:40
				background_normal: "dark.png"
				on_press: root.button_value(8)
				

			Button:
				text: "9"
				font_size:40
				background_normal: "dark.png"
				on_press: root.button_value(9)

			Button:
				text: "*"
				font_size: 40
				background_normal: "grey.png"
				on_press: root.signs("*")
				


			#### row 3 ####
			Button:
				text: "4"
				font_size: 40
				background_normal: "dark.png"
				on_press: root.button_value(4)

			Button:
				text: "5"
				font_size:40
				background_normal: "dark.png"
				on_press: root.button_value(5)

			Button:
				text: "6"
				font_size:40
				background_normal: "dark.png"
				on_press: root.button_value(6)

			Button:
				text: "-"
				font_size: 40
				background_normal: "grey.png"
				on_press: root.signs("_")
				


			#### row 4 ####
			Button:
				text: "1"
				font_size: 40
				background_normal: "dark.png"
				on_press: root.button_value(1)
				

			Button:
				text: "2"
				font_size:40
				background_normal: "dark.png"
				on_press: root.button_value(2)
				

			Button:
				text: "3"
				font_size:40
				background_normal: "dark.png"
				on_press: root.button_value(3)

			Button:
				text: "+"
				font_size: 40
				background_normal: "grey.png"
				on_press: root.button_value("+")
				


		GridLayout:
			cols:3
			rows:1
			size_hint_y: 0.25
			width: 100
			

			#### row 5 ####
		
			Button: 
				text: "0        "
				font_size: 40
				background_normal: "curve.png"
				size: 175, 100
				size_hint: None, None
				height: 110
				on_press: root.button_value(0)
				
				
				
		
			Button:
				text: "."
				font_size:40
				background_normal: "dark.png"
				on_press: root.signs(".")
				
				
				
			Button:
				text: "="
				font_size:40
				background_normal: "grey.png"
				on_press: root.results()
				
				
				
				